{
  "name": "leaderboard",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "npm run prod",
    "server": "node ./server/bin/www.js",
    "dev": "NODE_ENV=development npm-run-all server",
    "prod": "NODE_ENV=production npm-run-all server",
    "test": "set NODE_ENV=test&&mocha --recursive --exit",
    "watch:dev": "nodemon",
    "eslint": "eslint server/**"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-validator": "^6.12.0",
    "mongodb": "^3.6.9",
    "mongoose": "^5.12.15",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "week": "^0.2.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.5",
    "mocha": "^9.0.1",
    "nock": "^13.1.0",
    "nodemon": "^2.0.7",
    "request": "^2.88.2"
  }
}
